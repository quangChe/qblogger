<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header"> <%= postShown["title"] %> </div>
        <div class="ui top attached">
            <div class="item">
                  <img class="ui centered rounded image" src="<%= postShown["image"] %>">
                  <div class="content">
                      <span> <%= postShown["date"].toDateString() %> </span>
                  </div><br>
                  <div class="description">
                       <p> <%- postShown["body"] %> </p>  
                  </div><br>
                  <a class="ui button" href="/posts/<%= postShown["_id"] %>/edit">Edit</a>
                  <form id="delete" action="/posts/<%= postShown["_id"] %>?_method=DELETE" method="POST">
                      <button class="ui red button">Delete</button>
                  </form>
            </div>
        </div>
      
</div>

<% include partials/footer %>